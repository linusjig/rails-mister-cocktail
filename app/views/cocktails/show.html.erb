<p id="notice"><%= notice %></p>

<h1><%= @cocktail.name %></h1>

<% unless @cocktail.photo.nil? %>
  <%= image_tag @cocktail.photo.url(:standard) %>
<% end%>

<ul>
<% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.description %>
    <%= dose.ingredient.name %>
  </li>
<% end %>
</ul>

<%= link_to 'Edit', edit_cocktail_path(@cocktail) %> |
<%= link_to 'Back', cocktails_path %>
